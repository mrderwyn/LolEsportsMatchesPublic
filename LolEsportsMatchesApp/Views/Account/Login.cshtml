@model LolEsportsMatchesApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4">
        @using (@Html.BeginForm("Login", "Account"))
        {
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new {placeholder = "Input email"})
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new {placeholder = "Input password"})
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="hidden" name="ReturnUrl" value="@this.Context.Request.Query["ReturnUrl"]" />
                <button type="submit" class="btn btn-primary">Log in</button> 
        }
    </div>
</div>